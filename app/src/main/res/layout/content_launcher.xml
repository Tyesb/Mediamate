<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ff000000"
    android:clickable="true"
    >

    <ImageButton
        android:id="@+id/homeLeftButton"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:background="#ff000000"
        android:nextFocusRight="@+id/LowGridView"
        android:onClick="LaunchNetflix"
        android:paddingLeft="20px"
        android:paddingRight="20px" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >

        <!--<VideoView-->
            <!--android:id="@+id/homeVideoView"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="fill_parent"-->
            <!--android:visibility="visible"-->
            <!--/>-->

        <FrameLayout
            android:id="@+id/TopCenter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:paddingTop="10dp">

        </FrameLayout>

        <FrameLayout
            android:id="@+id/LowGridView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#ff000000"
            android:focusable="false"
            android:visibility="visible">

        </FrameLayout>
    </RelativeLayout>

    <ImageButton
        android:id="@+id/homeRightButton"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:background="#ff000000"
        android:onClick="LaunchAroundMe"
        android:paddingLeft="20px"
        android:paddingRight="20px" />

</LinearLayout>
